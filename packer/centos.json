{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-2",
    "source_ami_filter": {
        "filters": {
            "virtualization-type": "hvm",
            "name": "CentOS Linux 7*",
            "root-device-type": "ebs"
        },
        "owners": ["410186602215"],
        "most_recent": true
    },    
    "instance_type": "t2.micro",
    "ssh_username": "centos",
    "ami_name": "CentOS Linux 7 x86_64 HVM EBS {{isotime | clean_ami_name}}"
  }],
  "post-processors": [{
      "type": "manifest"
   }]
}